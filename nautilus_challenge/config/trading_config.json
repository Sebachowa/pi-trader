{
  "challenge": {
    "name": "Nautilus 10% Annual Return Challenge",
    "start_date": "2025-07-01",
    "duration_days": 14,
    "initial_capital_btc": 0.3,
    "target_annual_return": 0.10,
    "target_monthly_return": 0.0083,
    "max_daily_drawdown": 0.02,
    "max_total_drawdown": 0.05
  },
  
  "exchange": {
    "name": "binance",
    "testnet": false,
    "paper_trading": true,
    "data_feed": "live",
    "api_rate_limit": 1200
  },
  
  "instruments": [
    "BTCUSDT",
    "ETHUSDT",
    "BNBUSDT",
    "SOLUSDT",
    "ADAUSDT"
  ],
  
  "risk_management": {
    "max_position_size": 0.05,
    "max_concurrent_positions": 3,
    "stop_loss_percent": 0.02,
    "take_profit_percent": 0.03,
    "max_daily_trades": 10,
    "position_sizing_method": "kelly_criterion"
  },
  
  "strategies": {
    "trend_following": {
      "enabled": true,
      "allocation": 0.30,
      "params": {
        "fast_ema": 20,
        "slow_ema": 50,
        "atr_multiplier": 2.0
      }
    },
    "mean_reversion": {
      "enabled": true,
      "allocation": 0.25,
      "params": {
        "bollinger_period": 20,
        "bollinger_std": 2.0,
        "rsi_period": 14
      }
    },
    "momentum": {
      "enabled": true,
      "allocation": 0.25,
      "params": {
        "lookback_period": 20,
        "volume_threshold": 1.5
      }
    },
    "ai_ml": {
      "enabled": true,
      "allocation": 0.20,
      "params": {
        "model": "lstm_ensemble",
        "features": ["price", "volume", "volatility", "sentiment"],
        "retrain_frequency": "daily"
      }
    }
  },
  
  "monitoring": {
    "telegram_notifications": true,
    "dashboard_enabled": true,
    "dashboard_port": 8080,
    "log_level": "INFO",
    "performance_snapshot_interval": 3600,
    "backup_enabled": true,
    "backup_interval": 21600
  },
  
  "paper_to_live_transition": {
    "min_paper_trades": 100,
    "min_win_rate": 0.55,
    "min_sharpe_ratio": 1.5,
    "min_profit_factor": 1.8,
    "required_consecutive_profitable_days": 7
  }
}