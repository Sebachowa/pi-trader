{
  "strategy_testing_protocol": {
    "version": "1.0.0",
    "description": "Comprehensive strategy testing protocol for 2-week evaluation",
    "test_duration_days": 14,
    
    "trend_following_strategies": {
      "moving_average_crossover": {
        "variations": [
          {
            "name": "fast_scalping",
            "fast_period": [5, 8, 10],
            "slow_period": [15, 20, 25],
            "timeframes": ["1min", "5min"],
            "stop_loss_atr": 1.5,
            "take_profit_atr": 2.0
          },
          {
            "name": "medium_momentum",
            "fast_period": [20, 25, 30],
            "slow_period": [50, 60, 75],
            "timeframes": ["15min", "30min"],
            "stop_loss_atr": 2.0,
            "take_profit_atr": 3.0
          },
          {
            "name": "long_trend",
            "fast_period": [50, 100],
            "slow_period": [100, 200],
            "timeframes": ["1h", "4h"],
            "stop_loss_atr": 3.0,
            "take_profit_atr": 5.0
          }
        ],
        "performance_metrics": {
          "win_rate_target": 0.45,
          "profit_factor_target": 1.3,
          "max_drawdown_allowed": -15.0,
          "sharpe_ratio_target": 1.0
        }
      },
      
      "breakout_strategies": {
        "donchian_channel": {
          "periods": [20, 50, 100],
          "entry_threshold": 1.0,
          "exit_on_middle": true,
          "volatility_filter": "atr"
        },
        "bollinger_bands": {
          "periods": [20, 25],
          "std_dev": [2.0, 2.5],
          "squeeze_detection": true,
          "volume_confirmation": true
        },
        "range_breakout": {
          "lookback_periods": [20, 40, 60],
          "breakout_threshold_atr": [0.5, 0.75, 1.0],
          "volume_surge_required": 1.5
        }
      },
      
      "momentum_strategies": {
        "rsi_divergence": {
          "rsi_period": [14, 21],
          "divergence_lookback": [5, 10],
          "confirmation_required": true
        },
        "macd_histogram": {
          "fast": [12, 9],
          "slow": [26, 21],
          "signal": [9, 7],
          "histogram_threshold": 0.0
        },
        "velocity_indicator": {
          "lookback": [10, 20],
          "acceleration_threshold": 1.5,
          "volume_weight": 0.3
        }
      }
    },
    
    "mean_reversion_strategies": {
      "bollinger_band_mean_reversion": {
        "entry_conditions": {
          "band_touch": ["upper", "lower"],
          "rsi_confirmation": [70, 30],
          "volume_spike": false
        },
        "exit_conditions": {
          "middle_band_cross": true,
          "time_stop": "2_bars",
          "profit_target_atr": 1.0
        },
        "risk_parameters": {
          "max_positions": 3,
          "position_sizing": "volatility_adjusted",
          "stop_loss_atr": 2.0
        }
      },
      
      "statistical_arbitrage": {
        "zscore_threshold": [2.0, 2.5, 3.0],
        "lookback_period": [20, 50, 100],
        "half_life_calculation": true,
        "cointegration_test": "johansen",
        "pairs": {
          "crypto": ["BTC/ETH", "ETH/BNB", "BTC/SOL"],
          "forex": ["EUR/GBP", "AUD/NZD", "USD/CAD"],
          "equities": ["AAPL/MSFT", "JPM/BAC", "XOM/CVX"]
        }
      },
      
      "market_making_lite": {
        "spread_capture": {
          "min_spread_bps": 5,
          "quote_distance_atr": 0.25,
          "skew_adjustment": true
        },
        "inventory_management": {
          "max_inventory": 1.0,
          "decay_rate": 0.1,
          "risk_limits": "dynamic"
        }
      }
    },
    
    "arbitrage_strategies": {
      "triangular_arbitrage": {
        "markets": ["crypto", "forex"],
        "min_profit_bps": 2,
        "execution_time_limit_ms": 100,
        "paths": {
          "crypto": ["BTC/USDT->ETH/BTC->ETH/USDT", "ETH/USDT->BNB/ETH->BNB/USDT"],
          "forex": ["EUR/USD->GBP/EUR->GBP/USD", "USD/JPY->EUR/JPY->EUR/USD"]
        }
      },
      
      "exchange_arbitrage": {
        "venue_pairs": [
          ["BINANCE", "COINBASE"],
          ["BYBIT", "DYDX"],
          ["INTERACTIVE_BROKERS", "ALPACA"]
        ],
        "min_spread_bps": 5,
        "execution_lag_buffer_ms": 50,
        "fee_adjusted": true
      },
      
      "calendar_spread": {
        "instruments": ["futures", "options"],
        "spread_types": ["front_month", "diagonal", "butterfly"],
        "volatility_regime": ["low", "normal", "high"],
        "hedge_ratio": "beta_adjusted"
      }
    },
    
    "market_making_strategies": {
      "basic_market_maker": {
        "spread_methodology": {
          "base_spread_bps": [10, 15, 20],
          "volatility_adjustment": true,
          "inventory_skew": true,
          "competitive_quoting": false
        },
        "risk_management": {
          "max_position": [1.0, 2.0, 3.0],
          "position_decay": [0.1, 0.2],
          "drawdown_reduction": true
        },
        "order_management": {
          "levels": [1, 3, 5],
          "size_distribution": "linear",
          "refresh_interval_ms": [100, 500, 1000]
        }
      },
      
      "advanced_market_maker": {
        "price_model": ["avellaneda_stoikov", "glosten_milgrom"],
        "order_flow_prediction": true,
        "adverse_selection_protection": true,
        "dynamic_parameters": {
          "spread_optimizer": "reinforcement_learning",
          "inventory_optimizer": "mean_variance",
          "fee_optimizer": "game_theory"
        }
      }
    },
    
    "performance_evaluation_metrics": {
      "profitability": {
        "total_pnl": {"weight": 0.20},
        "sharpe_ratio": {"weight": 0.20},
        "profit_factor": {"weight": 0.15},
        "win_rate": {"weight": 0.10},
        "avg_win_loss_ratio": {"weight": 0.10}
      },
      
      "risk_metrics": {
        "max_drawdown": {"weight": 0.15},
        "var_95": {"weight": 0.10},
        "downside_deviation": {"weight": 0.10},
        "recovery_time": {"weight": 0.05}
      },
      
      "execution_quality": {
        "slippage": {"weight": 0.05},
        "fill_rate": {"weight": 0.05},
        "order_latency": {"weight": 0.05}
      },
      
      "consistency": {
        "daily_sharpe": {"weight": 0.10},
        "profit_consistency": {"weight": 0.10},
        "strategy_correlation": {"weight": 0.05}
      }
    },
    
    "adaptive_testing_framework": {
      "parameter_optimization": {
        "method": "bayesian_optimization",
        "iterations": 50,
        "cross_validation_folds": 5,
        "walk_forward_windows": 3
      },
      
      "regime_detection": {
        "volatility_regimes": ["low", "normal", "high", "extreme"],
        "trend_regimes": ["strong_up", "weak_up", "ranging", "weak_down", "strong_down"],
        "liquidity_regimes": ["thin", "normal", "deep"]
      },
      
      "strategy_switching": {
        "performance_threshold": -5.0,
        "regime_change_detection": true,
        "correlation_monitoring": true,
        "ensemble_weighting": "dynamic"
      }
    },
    
    "testing_schedule": {
      "week_1": {
        "focus": "strategy_discovery",
        "activities": [
          "parameter_sweep",
          "market_screening",
          "initial_performance_ranking",
          "risk_calibration"
        ]
      },
      
      "week_2": {
        "focus": "strategy_refinement",
        "activities": [
          "ensemble_creation",
          "stress_testing",
          "live_performance_validation",
          "final_selection"
        ]
      }
    }
  }
}