            "poor": {"max": 15, "score": 4},
            "unacceptable": {"min": 15, "score": 0}
          }
        }
      },
      
      "consistency_metrics": {
        "daily_consistency": {
          "weight": 0.10,
          "description": "Percentage of profitable days",
          "scoring": {
            "excellent": {"min": 0.65, "score": 10},
            "good": {"min": 0.55, "score": 8},
            "acceptable": {"min": 0.45, "score": 6},
            "poor": {"min": 0.35, "score": 4},
            "unacceptable": {"max": 0.35, "score": 0}
          }
        },
        
        "return_distribution": {
          "weight": 0.05,
          "description": "Kurtosis and skewness analysis",
          "scoring": {
            "normal": {"skew": [-0.5, 0.5], "score": 10},
            "slightly_skewed": {"skew": [-1.0, 1.0], "score": 7},
            "heavily_skewed": {"skew": [-2.0, 2.0], "score": 4},
            "extreme": {"score": 0}
          }
        }
      },
      
      "market_adaptability": {
        "regime_performance": {
          "weight": 0.10,
          "regimes": ["trending", "ranging", "volatile", "quiet"],
          "scoring": {
            "all_positive": {"score": 10},
            "three_positive": {"score": 8},
            "two_positive": {"score": 6},
            "one_positive": {"score": 4},
            "none_positive": {"score": 0}
          }
        },
        
        "correlation_independence": {
          "weight": 0.05,
          "description": "Low correlation to other strategies",
          "scoring": {
            "independent": {"max_corr": 0.3, "score": 10},
            "low_correlation": {"max_corr": 0.5, "score": 8},
            "moderate_correlation": {"max_corr": 0.7, "score": 6},
            "high_correlation": {"max_corr": 0.85, "score": 4},
            "redundant": {"min_corr": 0.85, "score": 0}
          }
        }
      },
      
      "automation_potential": {
        "execution_reliability": {
          "weight": 0.05,
          "metrics": ["fill_rate", "slippage", "order_errors"],
          "scoring": {
            "excellent": {"fill_rate": 0.98, "score": 10},
            "good": {"fill_rate": 0.95, "score": 8},
            "acceptable": {"fill_rate": 0.90, "score": 6},
            "poor": {"fill_rate": 0.85, "score": 4},
            "unacceptable": {"fill_rate": 0.85, "score": 0}
          }
        },
        
        "computational_efficiency": {
          "weight": 0.05,
          "metrics": ["latency_ms", "cpu_usage", "memory_usage"],
          "scoring": {
            "excellent": {"latency_ms": 10, "score": 10},
            "good": {"latency_ms": 50, "score": 8},
            "acceptable": {"latency_ms": 100, "score": 6},
            "poor": {"latency_ms": 500, "score": 4},
            "unacceptable": {"latency_ms": 1000, "score": 0}
          }
        }
      }
    },
    
    "allocation_algorithm": {
      "kelly_criterion": {
        "enabled": true,
        "confidence_factor": 0.25,
        "max_allocation_per_strategy": 0.25,
        "min_allocation_per_strategy": 0.05
      },
      
      "risk_parity": {
        "enabled": true,
        "target_risk_contribution": "equal",
        "rebalance_frequency": "daily",
        "transaction_cost_buffer": 0.001
      },
      
      "ensemble_weighting": {
        "method": "adaptive",
        "lookback_window": 20,
        "decay_factor": 0.95,
        "min_weight": 0.0,
        "max_weight": 0.4
      }
    },
    
    "selection_criteria": {
      "minimum_requirements": {
        "min_trades": 20,
        "min_days_active": 5,
        "min_sharpe_ratio": 0.5,
        "max_drawdown": -20.0,
        "min_profit_factor": 1.0
      },
      
      "portfolio_constraints": {
        "max_strategies": 10,
        "min_strategies": 3,
        "max_correlation": 0.7,
        "max_sector_concentration": 0.4,
        "max_market_concentration": 0.5
      },
      
      "dynamic_adjustments": {
        "performance_decay": {
          "enabled": true,
          "half_life_days": 10,
          "min_weight": 0.3
        },
        
        "volatility_scaling": {
          "enabled": true,
          "target_volatility": 0.15,
          "adjustment_frequency": "daily"
        },
        
        "regime_switching": {
          "enabled": true,
          "detection_method": "hmm",
          "switch_threshold": 0.8
        }
      }
    },
    
    "real_time_adjustments": {
      "drawdown_management": {
        "warning_level": -5.0,
        "reduce_size_level": -7.5,
        "stop_trading_level": -10.0,
        "recovery_threshold": -3.0
      },
      
      "correlation_monitoring": {
        "check_frequency_minutes": 30,
        "emergency_threshold": 0.95,
        "adjustment_method": "reduce_largest"
      },
      
      "performance_monitoring": {
        "underperformance_threshold": -2.0,
        "outperformance_threshold": 5.0,
        "adjustment_lag_days": 3
      }
    },
    
