{
  "paper_trading_framework": {
    "version": "1.0.0",
    "description": "Automated 2-week paper trading evaluation framework",
    "test_duration_days": 14,
    "environments": {
      "crypto": {
        "enabled": true,
        "max_concurrent_strategies": 5,
        "selection_interval_hours": 24,
        "starting_balances": {
          "USDT": 100000,
          "BTC": 2.0,
          "ETH": 30.0
        },
        "risk_limits": {
          "max_position_size_pct": 20,
          "max_daily_loss_pct": 5,
          "max_drawdown_pct": 15,
          "margin_usage_warning_pct": 70,
          "margin_usage_critical_pct": 90
        },
        "data_feeds": {
          "binance": {
            "enabled": true,
            "testnet": true,
            "symbols": ["BTCUSDT", "ETHUSDT", "BNBUSDT"]
          },
          "bybit": {
            "enabled": false,
            "testnet": true,
            "symbols": ["BTCUSDT", "ETHUSDT"]
          }
        }
      },
      "equities": {
        "enabled": true,
        "max_concurrent_strategies": 4,
        "selection_interval_hours": 24,
        "starting_balances": {
          "USD": 100000
        },
        "risk_limits": {
          "max_position_size_pct": 25,
          "max_daily_loss_pct": 3,
          "max_drawdown_pct": 10,
          "margin_usage_warning_pct": 60,
          "margin_usage_critical_pct": 80
        },
        "data_feeds": {
          "interactive_brokers": {
            "enabled": true,
            "paper_trading": true,
            "symbols": ["AAPL", "TSLA", "SPY", "QQQ", "NVDA"]
          },
          "databento": {
            "enabled": false,
            "dataset": "XNAS.ITCH",
            "symbols": ["AAPL", "MSFT", "GOOGL"]
          }
        }
      },
      "fx": {
        "enabled": true,
        "max_concurrent_strategies": 4,
        "selection_interval_hours": 12,
        "starting_balances": {
          "USD": 1000000,
          "EUR": 850000,
          "GBP": 750000,
          "JPY": 100000000
        },
        "risk_limits": {
          "max_position_size_pct": 30,
          "max_daily_loss_pct": 2,
          "max_drawdown_pct": 8,
          "margin_usage_warning_pct": 75,
          "margin_usage_critical_pct": 95
        },
        "data_feeds": {
          "fx_ecn": {
            "enabled": true,
            "symbols": ["EUR/USD", "GBP/USD", "USD/JPY", "EUR/JPY", "EUR/GBP"]
          }
        }
      },
      "mixed": {
        "enabled": true,
        "max_concurrent_strategies": 6,
        "selection_interval_hours": 12,
        "description": "Multi-asset strategies across markets",
        "starting_balances": {
          "USD": 200000,
          "USDT": 50000,
          "BTC": 1.0
        }
      }
    },
    "strategy_selection": {
      "algorithm": "ensemble",
      "min_trades_required": 5,
      "min_win_rate": 0.4,
      "max_drawdown_allowed": -15.0,
      "min_sharpe_ratio": 0.5,
      "min_profit_factor": 1.0,
      "lookback_days": 7,
      "recency_weight": 0.8,
      "scoring_weights": {
        "performance": 0.35,
        "risk": 0.25,
        "consistency": 0.20,
        "activity": 0.10,
        "recency": 0.10
      },
      "rebalance_triggers": {
        "strategy_underperformance_threshold": -5.0,
        "portfolio_drawdown_threshold": -10.0,
        "correlation_threshold": 0.8
      }
    },
    "monitoring": {
      "update_interval_seconds": 60,
      "snapshot_interval_minutes": 30,
      "performance_report_interval_hours": 6,
      "alerts": {
        "email_enabled": false,
        "slack_enabled": false,
        "log_enabled": true
      },
      "metrics_to_track": [
        "total_pnl",
        "unrealized_pnl",
        "realized_pnl",
        "win_rate",
        "sharpe_ratio",
        "max_drawdown",
        "position_count",
        "margin_usage"
      ]
    },
    "reporting": {
      "generate_html_reports": true,
      "generate_pdf_reports": false,
      "export_csv_data": true,
      "save_session_snapshots": true,
      "plot_performance_charts": true,
      "reports": {
        "daily_summary": true,
        "strategy_comparison": true,
        "risk_analysis": true,
        "market_correlation": true,
        "final_evaluation": true
      }
    },
    "automation": {
      "auto_start": true,
      "auto_stop_on_critical_error": true,
      "auto_restart_failed_strategies": false,
      "auto_adjust_position_sizes": true,
      "auto_hedge_correlated_positions": false,
      "scheduled_tasks": {
        "daily_evaluation": "00:00",
        "strategy_rebalance": "12:00",
        "risk_check": "every_hour",
        "performance_snapshot": "every_30_minutes"
      }
    },
    "backtesting_validation": {
      "enabled": true,
      "lookback_period_days": 30,
      "min_correlation_with_backtest": 0.7,
      "max_performance_deviation_pct": 20
    }
  }
}