{
  "trader_id": "AUTOBOT-001",
  "mode": "paper",
  "initial_capital": 0.3,
  "target_annual_return": 0.10,
  "max_drawdown": 0.05,
  "min_position_size": 0.001,
  "max_position_size": 0.05,
  "intervention_mode": "critical_only",
  
  "exchanges": {
    "binance": {
      "enabled": true,
      "testnet": true,
      "api_key_env": "BINANCE_API_KEY",
      "api_secret_env": "BINANCE_API_SECRET",
      "data_client": {
        "base_url": "https://testnet.binance.vision",
        "ws_base_url": "wss://testnet.binance.vision",
        "us": false,
        "sandbox_mode": true
      },
      "exec_client": {
        "base_url": "https://testnet.binance.vision",
        "us": false,
        "sandbox_mode": true,
        "default_leverage": 1,
        "position_mode": "one_way"
      }
    }
  },
  
  "instruments": [
    "BTCUSDT.BINANCE",
    "ETHUSDT.BINANCE",
    "BNBUSDT.BINANCE"
  ],
  
  "risk_management": {
    "max_portfolio_risk": 0.06,
    "max_position_risk": 0.02,
    "max_daily_drawdown": 0.05,
    "max_correlation": 0.7,
    "position_sizing_method": "kelly",
    "use_dynamic_sizing": true,
    "stop_loss_atr_multiplier": 2.0,
    "take_profit_atr_multiplier": 3.0
  },
  
  "strategy_management": {
    "max_concurrent_strategies": 5,
    "min_strategy_allocation": 0.05,
    "max_strategy_allocation": 0.30,
    "strategy_lookback_days": 30,
    "strategy_rebalance_hours": 24,
    "min_strategy_sharpe": 0.5,
    "strategy_health_check_interval": 300,
    "enabled_strategies": [
      "trend_following",
      "mean_reversion",
      "momentum",
      "ml_strategy"
    ]
  },
  
  "market_analysis": {
    "analysis_interval_mins": 15,
    "regime_detection_enabled": true,
    "volatility_lookback_days": 30,
    "trend_detection_periods": [20, 50, 200],
    "volume_analysis_enabled": true,
    "correlation_analysis_enabled": true
  },
  
  "ml_configuration": {
    "enabled": true,
    "model_update_frequency_days": 7,
    "min_training_samples": 1000,
    "feature_engineering": {
      "technical_indicators": true,
      "market_microstructure": true,
      "sentiment_analysis": false
    },
    "ensemble_models": [
      "random_forest",
      "gradient_boosting",
      "neural_network"
    ],
    "hyperparameter_optimization": true
  },
  
  "passive_income": {
    "enabled": true,
    "compound_profits": true,
    "withdrawal_frequency": "monthly",
    "min_withdrawal_amount": 0.01,
    "reserve_ratio": 0.2,
    "income_streams": [
      {
        "name": "staking",
        "enabled": true,
        "allocation": 0.2,
        "expected_apy": 0.05
      },
      {
        "name": "lending",
        "enabled": true,
        "allocation": 0.15,
        "expected_apy": 0.08
      },
      {
        "name": "liquidity_provision",
        "enabled": false,
        "allocation": 0.1,
        "expected_apy": 0.12
      }
    ]
  },
  
  "monitoring": {
    "performance_tracking_enabled": true,
    "reporting_interval_hours": 24,
    "metrics_to_track": [
      "total_pnl",
      "daily_pnl",
      "win_rate",
      "sharpe_ratio",
      "max_drawdown",
      "trade_frequency",
      "avg_trade_duration",
      "strategy_performance"
    ],
    "alert_thresholds": {
      "daily_loss": -0.03,
      "drawdown": -0.04,
      "low_win_rate": 0.40,
      "high_correlation": 0.8
    }
  },
  
  "notifications": {
    "telegram": {
      "enabled": true,
      "token_env": "TELEGRAM_BOT_TOKEN",
      "chat_id_env": "TELEGRAM_CHAT_ID",
      "notification_levels": ["error", "warning", "info"],
      "daily_summary_time": "00:00",
      "trade_notifications": true
    },
    "email": {
      "enabled": false,
      "smtp_server": "smtp.gmail.com",
      "smtp_port": 587,
      "from_email_env": "EMAIL_FROM",
      "password_env": "EMAIL_PASSWORD",
      "to_emails": []
    }
  },
  
  "system_configuration": {
    "auto_restart_on_failure": true,
    "max_recovery_attempts": 3,
    "health_check_interval_mins": 60,
    "memory_limit_mb": 4096,
    "cpu_limit_percent": 80,
    "log_level": "INFO",
    "log_retention_days": 30,
    "database": {
      "type": "sqlite",
      "path": "./data/trading.db",
      "backup_enabled": true,
      "backup_frequency_hours": 24
    }
  },
  
  "backtesting": {
    "enabled": true,
    "start_date": "2024-01-01",
    "end_date": "2024-12-31",
    "initial_balance": 1.0,
    "commission_rate": 0.001,
    "slippage_model": "fixed",
    "slippage_bps": 5
  },
  
  "paper_trading": {
    "reset_daily": false,
    "initial_balance": 0.3,
    "realistic_fills": true,
    "simulate_latency_ms": 50,
    "simulate_partial_fills": true
  }
}