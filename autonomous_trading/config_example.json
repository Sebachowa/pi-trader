{
  "system_name": "NATS-001",
  "trader_id": "AUTONOMOUS-001",
  "target_annual_return_percent": 10.0,
  "min_acceptable_sharpe_ratio": 1.0,
  
  "risk_limits": {
    "max_daily_loss_percent": 2.0,
    "max_drawdown_percent": 10.0,
    "max_position_risk_percent": 1.0,
    "max_portfolio_risk_percent": 5.0,
    "max_correlation": 0.7,
    "var_confidence_level": 0.95
  },
  
  "strategy_orchestrator": {
    "max_concurrent_strategies": 5,
    "min_strategy_allocation": 0.05,
    "max_strategy_allocation": 0.30,
    "performance_lookback_days": 30,
    "rebalance_interval_hours": 24
  },
  
  "performance_optimizer": {
    "optimization_interval_hours": 24,
    "min_samples_for_optimization": 50,
    "exploration_fraction": 0.2,
    "enable_bayesian_optimization": true
  },
  
  "market_analyzer": {
    "lookback_periods": 100,
    "update_interval_seconds": 60,
    "anomaly_threshold": 3.0
  },
  
  "instruments": [
    "BTCUSDT.BINANCE",
    "ETHUSDT.BINANCE",
    "BNBUSDT.BINANCE",
    "EURUSD.IDEALPRO",
    "GBPUSD.IDEALPRO"
  ],
  
  "exchange_configs": {
    "BINANCE": {
      "api_key": "${BINANCE_API_KEY}",
      "api_secret": "${BINANCE_API_SECRET}",
      "testnet": true
    },
    "INTERACTIVE_BROKERS": {
      "host": "127.0.0.1",
      "port": 7497,
      "client_id": 1
    }
  },
  
  "enable_self_healing": true,
  "health_check_interval_seconds": 60,
  "max_recovery_attempts": 3,
  "recovery_delay_seconds": 30,
  "enable_auto_shutdown": true,
  "daily_maintenance_time": "03:00",
  "enable_notifications": true,
  "enable_paper_trading": false,
  "log_level": "INFO",
  
  "notification_config": {
    "email_config": {
      "smtp_server": "smtp.gmail.com",
      "smtp_port": 587,
      "sender_email": "your-email@gmail.com",
      "sender_password": "${EMAIL_PASSWORD}",
      "recipient_emails": ["alerts@yourdomain.com"]
    },
    "webhook_config": {
      "urls": ["https://your-webhook-url.com/trading-alerts"]
    },
    "telegram_config": {
      "bot_token": "${TELEGRAM_BOT_TOKEN}",
      "chat_ids": ["YOUR_CHAT_ID"]
    }
  }
}